                    <li>
                        <a href="/documents">All Documents</a>
                    </li>
           
                </ul>
            </div>
            <!-- /.navbar-collapse -->
        </div>
        <!-- /.container -->
    </nav>

    <!-- Main Content -->
    <div class="container">
        <%= yield %>
    </div>

    <hr>

